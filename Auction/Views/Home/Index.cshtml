         $(document).ready(function () {
            $('#LoginBtn').click(function () {
                var data = {
                    "username": $("#Username").val(),
                    "password": $("#Password").val()
                };
                var user1 = {
                    "ID":"1",
                    "username": "user1",
                    "password": "user1"
                };
                var user2 = {
                    "ID":"3",
                    "username": "user2",
                    "password": "user2"
                };

                if (data.username != "" && data.password != "") {
                    if (data.username == user1.username && data.password == user1.password) {
                        document.cookie = "ClientID=" + user1.ID;
                            window.location.href = "@Url.Action("AuctionList", "Home")";
                    } else if (data.username == user2.username && data.password == user2.password) {
                        document.cookie = "ClientID=" + user2.ID;
                            window.location.href = "@Url.Action("AuctionList", "Home")";
                    } else {
                        $("#Username").focus();
                        alert('Invalid user data !');
                    }
                } else {
                    $("#Username").focus();
                    alert('Invalid user data !');
                }

            });
        });


    </script>
}
