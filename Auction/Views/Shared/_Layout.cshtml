                </div>
            </div>
        </div>*@
    <div class="container py-5">
        <h2>@ViewBag.Title</h2>
        <hr />
        @RenderBody()

    </div>


    <footer>

        <div style="position: relative; border-top: 2px solid #0094ff; opacity: .75;" class="text-dark fw-bold bg-light  ">
            <div class="container">
                <div class="row ">

                    <div class="col-md-4 text-right py-5">
                        <h4 class="fw-bold">Contact Us</h4>
                        <hr />
                        <a href="tel:0" id="call" target="_blank" class="text-decoration-none">
                            <i class="fas fa-phone-square fa-3x"
                               style="color: darkslategrey;"></i>
                        </a>

                        <a href='#' id="whats" target="_blank" class="text-decoration-none">
                            <i class="fab fa-whatsapp-square fa-3x"
                               style="color: #25D366;"></i>
                        </a>
                        <a href="#" id="face" target="_blank" class="text-decoration-none">
                            <i class="fab fa-facebook-square fa-3x"
                               style="color: #3b5998;"></i>
                        </a>
                        <a href="#" id="messenger" target="_blank" class="text-decoration-none">
                            <i class="fab fa-facebook-messenger fa-3x"
                               style="color: #00C6FF;"></i>
                        </a>
                        <a href="#" id="insta" target="_blank" class="text-decoration-none">
                            <i class="fab fa-instagram-square fa-3x"
                               style="color: #3f729b ;"></i>
                        </a>
                        <a href="#" id="insta" target="_blank" class="text-decoration-none">
                            <i class="fab fa-twitter-square fa-3x"
                               style="color: #00acee ;"></i>
                        </a>

                    </div>


                    <div class="col-md-8 text-right py-5">
                        <h4 class="fw-bold"> Auctions</h4>
                        <hr />
                        Auctions Every Where
                    </div>


                </div>
            </div>
        </div>

    </footer>


    <div id="loadingDiv" class="position-fixed w-100 h-100 bg-dark " style="bottom: 0px; opacity: .7; z-index: 99999999999999999999999999999999;display:none">
        <div class="d-flex justify-content-center align-items-center w-100 h-100">

            <div class="fa-10x text-light">
                <i class="fas fa-circle-notch fa-spin"></i>
            </div>
        </div>
    </div>


    <div class='modal pt-0 fade' id='ImageManifier' tabindex='-1' role='dialog' aria-labelledby='ImageManifierLabel' aria-hidden='true'>
        <div class='modal-dialog modal-dialog-centered modal-xl' role='document'>
            <div class='modal-content'>
                <div class='modal-header'>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    </button>
                </div>
                <div class='modal-body p-0'>
                    <img class='img-fluid h-100 w-100' src='#' alt='' id="modalimage" />
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    @*@Scripts.Render("~/bundles/bootstrap")*@

    <script src="https://cdn.jsdelivr.net/npm/datatables.net@1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/datatables.net-responsive@2.2.7/js/dataTables.responsive.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/Site.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
